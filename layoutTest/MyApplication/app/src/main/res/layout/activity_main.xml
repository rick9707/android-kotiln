<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="4"
    android:orientation="vertical">
    <EditText
        android:id="@+id/num1"
        android:textSize="30sp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="4"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:hint="Num1"/>
    <EditText
        android:id="@+id/num2"
        android:textSize="30sp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="4"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:hint="Num2"/>
    <TextView
        android:id="@+id/result"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:textSize="30sp"
        android:hint="Result"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:gravity="center_vertical"
        android:text="Result"/>
<GridLayout
    android:layout_height="0dp"
    android:layout_rowWeight="4"
        android:columnCount="4"
    android:orientation="horizontal">
    <Button
        android:id="@+id/B7"
        android:textSize="15dp"
        android:layout_columnSpan="1"
        android:layout_margin="5dp"
        android:text="7"/>
    <Button
        android:id="@+id/B8"
        android:textSize="15sp"
        android:layout_columnSpan="1"
        android:layout_margin="5dp"
        android:text="8"/>
    <Button
        android:id="@+id/B9"
        android:textSize="15sp"
        android:layout_columnSpan="1"
        android:layout_margin="5dp"
        android:text="9"/>
    <Button
        android:id="@+id/div"
        android:textSize="15sp"
        android:layout_columnSpan="1"
        android:layout_margin="5dp"
        android:text="/"/>
    <Button
        android:id="@+id/B4"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:layout_columnSpan="1"
        android:text="4"/>
    <Button
        android:id="@+id/B5"
        android:textSize="15sp"
        android:layout_columnSpan="1"
        android:layout_margin="5dp"
        android:text="5"/>
    <Button
        android:id="@+id/B6"
        android:textSize="15sp"
        android:layout_columnSpan="1"
        android:layout_margin="5dp"
        android:text="6"/>
    <Button
        android:id="@+id/mul"
        android:textSize="15sp"
        android:layout_columnSpan="1"
        android:layout_margin="5dp"
        android:text="*"/>
    <Button
        android:id="@+id/B1"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:layout_columnSpan="1"
        android:text="1"/>
    <Button
        android:id="@+id/B2"
        android:textSize="15sp"
        android:layout_columnSpan="1"
        android:layout_margin="5dp"
        android:text="2"/>
    <Button
        android:id="@+id/B3"
        android:textSize="15sp"
        android:layout_columnSpan="1"
        android:layout_margin="5dp"
        android:text="3"/>
    <Button
        android:id="@+id/sub"
        android:textSize="15sp"
        android:layout_columnSpan="1"
        android:layout_margin="5dp"
        android:text="-"/>
    <Button
        android:id="@+id/B0"
        android:textSize="15sp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_margin="5dp"
        android:text="0"/>
    <Button
        android:id="@+id/dot"
        android:textSize="15sp"
        android:layout_columnSpan="1"
        android:layout_margin="5dp"
        android:text="."/>
    <Button
        android:id="@+id/add"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:layout_columnSpan="1"
        android:text="+"/>
    <Button
        android:id="@+id/reset"
        android:textSize="15sp"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="5dp"
        android:text="reset"/>
</GridLayout>

  </GridLayout>